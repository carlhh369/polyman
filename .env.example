# Test Mode (set to false for real trading)
TEST_MODE=true
MOCK_TRADING=true

# Polymarket Configuration (not required in test mode)
POLYMARKET_PRIVATE_KEY=your_private_key_here
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_PASSPHRASE=your_passphrase_here
POLYMARKET_SECRET=your_secret_here

# News API
NEWS_API_KEY=your_newsapi_key_here

# Trading Configuration
MAX_POSITION_SIZE=100
MIN_CONFIDENCE_THRESHOLD=0.7
MAX_DAILY_TRADES=10
MAX_OPEN_POSITIONS=20
RISK_LIMIT_PER_TRADE=50
MIN_EDGE=0.15

# Strategy Selection
STRATEGY=simple  # simple, llm, expiring, interactive, all

# Simple Threshold Strategy
SIMPLE_BUY_THRESHOLD=0.3
SIMPLE_SELL_THRESHOLD=0.7
SIMPLE_MIN_EDGE=0.15

# Expiring Markets Strategy
EXPIRING_MIN_PROBABILITY=0.95
EXPIRING_MAX_HOURS=48
EXPIRING_MIN_HOURS=2
EXPIRING_MIN_VOLUME=10000

# Interactive Strategy
INTERACTIVE_PRICE_EDGE=0.15
INTERACTIVE_MIN_VOLUME=50000
SENTIMENT_WEIGHT=0.3
PRICE_WEIGHT=0.4
VOLUME_WEIGHT=0.3

# Index Strategy
SPMC_INDEX_ID=your_index_id_here
INDEX_REBALANCE_THRESHOLD=0.05
INDEX_CHECK_INTERVAL=60
INDEX_MAX_DEVIATION=0.10

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=agent.log

# Monitoring
CHECK_INTERVAL=300  # seconds (5 minutes)

# OpenRouter API (for LLM-based analysis)
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=gpt-3.5-turbo
